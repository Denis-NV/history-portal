{
  "name": "history-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:db": "dotenv -e .env.local -- vitest run -c vitest.db.config.ts",
    "test:db:watch": "dotenv -e .env.local -- vitest -c vitest.db.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "dotenv -e .env.local -- drizzle-kit generate",
    "db:migrate": "dotenv -e .env.local -- drizzle-kit migrate",
    "db:migrate:rls": "dotenv -e .env.local -- tsx scripts/db/migrate-rls.ts",
    "db:migrate:all": "pnpm db:migrate && pnpm db:migrate:rls",
    "db:reset:local": "dotenv -e .env.local -- tsx scripts/db/reset-local.ts",
    "db:reset:staging": "tsx scripts/db/reset-staging.ts",
    "db:setup:neon-dev": "tsx scripts/db/setup-dev-branch.ts",
    "db:seed": "dotenv -e .env.local -- tsx scripts/db/seed.ts",
    "db:studio": "dotenv -e .env.local -- drizzle-kit studio",
    "pulumi": "pulumi -C infra",
    "infra:preview:staging": "pulumi -C infra preview --stack staging",
    "infra:up:staging": "pulumi -C infra up --stack staging",
    "infra:destroy:staging": "pulumi -C infra destroy --stack staging",
    "infra:preview:prod": "pulumi -C infra preview --stack prod",
    "infra:up:prod": "pulumi -C infra up --stack prod",
    "ui:add": "pnpm dlx shadcn@latest add --yes"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@noble/hashes": "^2.0.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "^1.0.2",
    "@types/pg": "^8.16.0",
    "better-auth": "^1.4.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.41.0",
    "drizzle-seed": "^0.3.1",
    "lucide-react": "^0.561.0",
    "next": "16.0.8",
    "pg": "^8.16.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "resend": "^6.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8",
    "@vitejs/plugin-react": "^5.1.2",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.0.8",
    "happy-dom": "^20.0.11",
    "neonctl": "^2.19.0",
    "postgres": "^3.4.7",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.16",
    "ws": "^8.18.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "better-sqlite3",
      "core-js",
      "esbuild",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.25.0"
}
