{
  "name": "history-portal",
  "version": "0.1.0",
  "scripts": {
    "dev:portal": "turbo -F portal dev",
    "check-types": "turbo check-types",
    "pulumi": "pulumi -C infra",
    "infra:preview:staging": "pulumi -C infra preview --stack staging",
