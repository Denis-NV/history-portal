{
  "name": "@history-portal/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "generate": "dotenv -e .env.local -- drizzle-kit generate",
    "migrate": "dotenv -e .env.local -- drizzle-kit migrate",
    "migrate:rls": "dotenv -e .env.local -- tsx scripts/migrate-rls.ts",
    "migrate:all": "pnpm migrate && pnpm migrate:rls",
    "reset:local": "dotenv -e .env.local -- tsx scripts/reset-local.ts",
    "reset:staging": "tsx scripts/reset-staging.ts",
    "setup:neon-dev": "tsx scripts/setup-dev-branch.ts",
    "seed": "dotenv -e .env.local -- tsx scripts/seed.ts",
    "neon:auth": "neonctl auth",
    "dev": "dotenv -e .env.local -- drizzle-kit studio",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@types/pg": "^8.16.0",
    "better-auth": "^1.4.7",
    "drizzle-orm": "^0.41.0",
    "drizzle-seed": "^0.3.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/ws": "^8",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "neonctl": "^2.19.0",
    "postgres": "^3.4.7",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.16",
    "ws": "^8.18.0"
  }
}
